<%- include ./partials/header.ejs %>
<!-- Header / Navbar -->
<%- include ./partials/main_nav.ejs %>

<!-- Main Content -->
<main class="flex-fill">
  <div id="wrapper" class="container my-auto">

    <!-- Intro Text Section -->
    <div class="container my-4">
      <div class="bg-light p-4 rounded text-center shadow-sm">
        <h3>
          Welcome to my portfolio! Here you can learn more about myself, my projects, 
          and even contact me for further questions! Feel free to use the navigation 
          or buttons below to walk through the site!
        </h3>
      </div>
    </div>

    <!-- Icon Row -->
    <div class="container text-center">
      <div class="row justify-content-center gy-4">
        <!-- Contact -->
        <div class="col-10 col-sm-6 col-md-4 col-lg-3">
          <a href="contactme">
            <img 
              src="/Asset/images/mail-icon.jpg" 
              class="img-fluid rounded shadow" 
              title="Contact Me" 
              alt="icon">
          </a>
        </div>

        <!-- Projects -->
        <div class="col-10 col-sm-6 col-md-4 col-lg-3">
          <a href="projects">
            <img 
              src="/Asset/images/pencil-icon.jpg" 
              class="img-fluid rounded shadow" 
              title="My Projects" 
              alt="icon">
          </a>
        </div>

        <!-- About Me -->
        <div class="col-10 col-sm-6 col-md-4 col-lg-3">
          <a href="about">
            <img 
              src="/Asset/images/question-icon.jpg" 
              class="img-fluid rounded shadow" 
              title="About Me" 
              alt="icon">
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- The clear class style removes floats -->
  <div class="clear"></div>
</main>

<!-- Footer / Navbar -->
<%- include ./partials/footer.ejs %>
