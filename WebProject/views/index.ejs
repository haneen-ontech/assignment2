<!-- header/navbar being pulled from partials folder-->
<%- include ./partials/header.ejs %>
<%- include ./partials/main_nav.ejs %>

<!-- main content (body of the page) -->
<main>
  <!-- wrapper with class container-fluid fso it matches width of screen -->
  <div class="container-fluid py-5">

    <!-- intro with text -->
    <div class="row justify-content-center mb-5">
      <div class="col-11 col-md-8 col-lg-6 text-center">
        <div class="bg-light p-4 rounded shadow-sm">
          <h3>
            Welcome to my portfolio! Here you can learn more about myself, my projects,
            and even contact me for further questions! Feel free to use the navigation
            or buttons below to walk through the site!
          </h3>
        </div>
      </div>
    </div>

    <!-- my icon wow -->
    <div class="row justify-content-center text-center g-4">
      <!-- contact icon-->
      <div class="col-10 col-sm-6 col-md-4 col-lg-3">
        <a href="contactme">
          <img src="/Asset/images/mail-icon.jpg" class="img-fluid rounded shadow" title="Contact Me" alt="Contact Icon">
        </a>
      </div>
      <!-- projects icon-->
      <div class="col-10 col-sm-6 col-md-4 col-lg-3">
        <a href="projects">
          <img src="/Asset/images/pencil-icon.jpg" class="img-fluid rounded shadow" title="My Projects" alt="Projects Icon">
        </a>
      </div>

      <!-- about me icon -->
      <div class="col-10 col-sm-6 col-md-4 col-lg-3">
        <a href="about">
          <img src="/Asset/images/question-icon.jpg" class="img-fluid rounded shadow" title="About Me" alt="About Icon">
        </a>
      </div>
    </div>
    
  </div>
</main>

<!-- footer/navbar -->
<%- include ./partials/footer.ejs %>
